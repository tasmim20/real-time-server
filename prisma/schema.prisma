generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // This reads the connection string from the .env file
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  messages  Message[]
}


model Message {
  id        String   @id @default(cuid())
  message   String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
