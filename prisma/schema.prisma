generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // This reads the connection string from the .env file
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  messages  Message[] @relation("UserMessages")
}

model Message {
  id          Int      @id @default(autoincrement())
  content     String
  senderId    Int
  receiverId  Int
  sender      User     @relation("UserMessages", fields: [senderId], references: [id])
  createdAt   DateTime @default(now())
}
